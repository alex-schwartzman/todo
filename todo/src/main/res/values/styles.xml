<resources xmlns:tools="http://schemas.android.com/tools">



    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextView.Small" parent="TextView">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextView.Medium" parent="TextView">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextView.Micro" parent="TextView">
        <item name="android:textSize">@dimen/text_size_micro</item>
    </style>

    <style name="TextView.Large" parent="TextView">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

</resources>
